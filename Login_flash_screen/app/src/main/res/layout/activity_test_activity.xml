<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".test_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/view1"
        android:background="@drawable/bg_content1"/>

        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/toolbar"
            android:textColor="#ffff"
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="Track your learning performance and progress reports">

        </TextView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_alignLeft="@+id/v1"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_increase"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/ic_left_arrow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analysis Reports"
                android:textFontWeight="100"
                android:layout_marginLeft="70dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

        </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_select"
            android:orientation="horizontal"
            android:layout_below="@+id/view1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/c1"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/img_s4"
                            android:src="@drawable/ic_dart_board"/>


                        <TextView
                            android:layout_below="@+id/img_s4"
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000000"
                            android:textSize="6pt"
                            android:text="Overall" />

                        <TableRow
                            android:id="@+id/hr"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/t1"
                            android:layout_height="2dp"
                            android:background="#d3d3d3"></TableRow>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/c2"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/img_s2"
                            android:src="@drawable/ic_sk"/>


                        <TextView
                            android:layout_below="@+id/img_s2"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:textSize="6pt"
                            android:id="@+id/t2"
                            android:text="Skill" />

                        <TableRow
                            android:id="@+id/hr2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/t2"
                            android:layout_height="2dp"
                            android:background="#d3d3d3"></TableRow>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/c3"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/img_s3"
                            android:src="@drawable/ic_cap"/>


                        <TextView
                            android:layout_below="@+id/img_s3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:layout_centerHorizontal="true"
                            android:textSize="6pt"
                            android:id="@+id/t3"
                            android:text="Career"/>

                        <TableRow
                            android:id="@+id/hr3"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/t3"
                            android:layout_height="2dp"
                            android:background="#d3d3d3"></TableRow>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/c4"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/img_s1"
                            android:src="@drawable/ic_prog"/>


                        <TextView
                            android:layout_below="@+id/img_s1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000000"
                            android:textSize="6pt"
                            android:id="@+id/t4"
                            android:text="Programming" />

                        <TableRow
                            android:id="@+id/hr4"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/t4"
                            android:layout_height="2dp"
                            android:background="#d3d3d3"></TableRow>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>


        <TextView
            android:id="@+id/textViewHeading"
            android:layout_below="@+id/layout_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="10pt"
            android:text="Overall Statistics"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_overall"
        android:layout_below="@+id/textViewHeading"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/circular_progress"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circular_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="12" />

            <TextView
                android:id="@+id/textViewOverall"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="88%\nOverall Progress" />

            <TextView
                android:id="@+id/textViewSubHeading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/logo1"
                android:textColor="#000000"
                android:text="Programming"
                android:textSize="6pt"/>

            <TextView
                android:id="@+id/textViewRightSubHeading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:textAlignment="textEnd"
                android:layout_alignParentRight="true"
                android:text="10%"
                android:textSize="6pt"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/circular_progress"
                android:id="@+id/logo1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/ic_prog"/>

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textViewSubHeading1"
                android:layout_toRightOf="@+id/logo1"
                android:progressDrawable="@drawable/custom_proogressbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="4"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textViewSubHeading2"
                android:layout_below="@+id/logo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/logo2"
                android:textSize="6pt"
                android:text="Skills" />

            <TextView
                android:id="@+id/textViewRightSubHeading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:textAlignment="textEnd"
                android:layout_alignParentRight="true"
                android:text="10%"
                android:textSize="6pt"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/logo2"
                android:layout_below="@+id/logo1"
                android:layout_toRightOf="@+id/circular_progress"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/ic_sk"/>

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="5dp"
                android:progressDrawable="@drawable/custom_progressbar2"
                android:layout_toRightOf="@+id/logo2"
                android:layout_below="@+id/textViewSubHeading2"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="4"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textViewSubHeading3"
                android:layout_below="@+id/logo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/logo3"
                android:textColor="#000000"
                android:textSize="6pt"
                android:text="Career" />

            <TextView
                android:id="@+id/textViewRightSubHeading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo2"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:textAlignment="textEnd"
                android:layout_alignParentRight="true"
                android:text="10%"
                android:textSize="6pt"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/logo3"
                android:layout_below="@+id/logo2"
                android:layout_toRightOf="@+id/circular_progress"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/ic_cap"/>

            <ProgressBar
                android:id="@+id/progressBar3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:progressDrawable="@drawable/custom_progressbar3"
                android:layout_below="@+id/textViewSubHeading3"
                android:layout_toRightOf="@+id/logo3"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="4"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

       </androidx.cardview.widget.CardView>

        <TableRow
            android:id="@+id/hrbottom"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/card_overall"
            android:layout_height="2dp"
            android:background="#d3d3d3"></TableRow>


    </RelativeLayout>
</ScrollView>