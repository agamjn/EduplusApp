<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/v1"
                android:background="#FFA500"/>

            <ImageView
                android:id="@+id/view_back"
                android:layout_width="match_parent"
                android:layout_below="@+id/v1"
                android:layout_height="wrap_content"
                android:layout_marginTop="-120dp"
                android:src="@drawable/ic_wave"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFA500"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:navigationIcon="@drawable/menu_button_of_three_horizontal_lines">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC Learning App"
                    android:textFontWeight="900"
                    android:layout_marginLeft="70dp"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_title" />

            </androidx.appcompat.widget.Toolbar>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_below="@+id/toolbar"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="45dp"
                android:text="XYZ!"
                android:textSize="30sp"
                app:fontFamily="@font/baloo"
                android:layout_below="@+id/toolbar" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="135dp"
                android:text="Class X, ABC Public School"
                android:layout_below="@+id/textView"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="180dp"
                android:elevation="10dp"
                app:srcCompat="@drawable/ic_increase"
                android:layout_below="@+id/toolbar"/>

            <TextView
                android:layout_width="300dp"
                android:id="@+id/th"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="250dp"
                android:text="This Month's Content"
                android:layout_below="@+id/toolbar"
                android:textColor="#000000"
                android:textSize="25sp"
                app:fontFamily="@font/baloo"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_below="@+id/th"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="4dp">


                        <ImageView
                            android:id="@+id/p"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            app:srcCompat="@drawable/ic_html_coding" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_alignLeft="@+id/p"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/p"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="-60dp"
                            android:text="Programming"
                            android:textSize="28sp"
                            app:fontFamily="@font/aclonica" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/s"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            app:srcCompat="@drawable/skill_icon" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/s"
                            android:layout_alignLeft="@+id/s"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="-60dp"
                            android:text="Skill Development"
                            android:textSize="28sp"
                            app:fontFamily="@font/aclonica" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_below="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="4dp">


                        <ImageView
                            android:id="@+id/c"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            app:srcCompat="@drawable/career_icon" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/c"
                            android:layout_alignLeft="@+id/c"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="-60dp"
                            android:text="Career Awareness"
                            android:textSize="28sp"
                            app:fontFamily="@font/aclonica" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>