<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Career">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/ep_s1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_skill2">


                <TextView
                    android:textSize="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:id="@+id/topic"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="Understanding Entrepreneurship"></TextView>

                <TextView
                    android:textSize="16dp"
                    android:layout_below="@+id/topic"
                    android:id="@+id/week"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#90FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stage1 Module"></TextView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="270dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_accounting" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/week"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/ic_stopwatch"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_below="@+id/week"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:text="2 hours to complete"
                    android:textSize="15dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="#ffff"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/week"
                    android:layout_marginLeft="182dp"
                    android:layout_marginTop="30dp"
                    android:text="Mark as Completed"
                    android:layout_marginBottom="7dp"
                    android:textSize="12dp"
                    android:textColor="#ffff"
                    android:id="@+id/check1" />




            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/ep_s2"
            android:layout_below="@+id/ep_s1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_skill3">



                <TextView
                    android:textSize="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:id="@+id/topic1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="Entrepreneurship as a Career"></TextView>

                <TextView
                    android:textSize="16dp"
                    android:layout_below="@+id/topic1"
                    android:id="@+id/week1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#90FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stage2 Module"></TextView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="270dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_accounting" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/week1"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/ic_stopwatch"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_below="@+id/week1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:text="2 hours to complete"
                    android:textSize="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="36dp"
                    android:textColor="#ffff"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/week1"
                    android:layout_marginLeft="182dp"
                    android:layout_marginTop="30dp"
                    android:text="Mark as Completed"
                    android:textSize="12dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="#ffff"
                    android:id="@+id/check2" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/ep_s3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ep_s2"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_skill">



                <TextView
                    android:textSize="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:id="@+id/topic2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="Entrepreneurial Resources"></TextView>

                <TextView
                    android:textSize="16dp"
                    android:layout_below="@+id/topic2"
                    android:id="@+id/week2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#90FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stage3 Module"></TextView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="270dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_accounting" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/week2"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/ic_stopwatch"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_below="@+id/week2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:text="2 hours to complete"
                    android:textSize="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="36dp"
                    android:textColor="#ffff"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/week2"
                    android:layout_marginLeft="182dp"
                    android:layout_marginTop="30dp"
                    android:text="Mark as Completed"
                    android:textSize="12dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="#ffff"
                    android:id="@+id/check3" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>