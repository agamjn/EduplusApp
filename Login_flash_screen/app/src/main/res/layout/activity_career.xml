                        <TextView
                            android:textSize="16dp"
                            android:textColor="#90FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stage2 Module"></TextView>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
