        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_select"
            android:scrollbars="none"
            android:layout_below="@+id/view1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/c1"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/img_s4"
                            android:src="@drawable/ic_dart_board"/>


                        <TextView
                            android:layout_below="@+id/img_s4"
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000000"
                            android:textSize="6pt"
                            android:text="Overall" />


                        <ProgressBar
                            android:id="@+id/pB1"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="5dp"
                            android:progressDrawable="@drawable/custom_proogressbar"
                            android:layout_below="@+id/t1"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_centerHorizontal="true"
                            android:max="1"
                            android:progress="1"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/c2"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/img_s2"
                            android:src="@drawable/ic_sk"/>


                        <TextView
                            android:layout_below="@+id/img_s2"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:textSize="6pt"
                            android:id="@+id/t2"
                            android:text="Skill" />

                        <ProgressBar
                            android:id="@+id/pB2"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="5dp"
                            android:progressDrawable="@drawable/custom_proogressbar"
                            android:layout_below="@+id/t2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_centerHorizontal="true"
                            android:max="12"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/c3"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/img_s3"
                            android:src="@drawable/ic_cap"/>


                        <TextView
                            android:layout_below="@+id/img_s3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:layout_centerHorizontal="true"
                            android:textSize="6pt"
                            android:id="@+id/t3"
                            android:text="Career"/>

                        <ProgressBar
                            android:id="@+id/pB3"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="5dp"
                            android:progressDrawable="@drawable/custom_proogressbar"
                            android:layout_below="@+id/t3"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_centerHorizontal="true"
                            android:max="12"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/c4"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/img_s1"
                            android:src="@drawable/ic_prog"/>


                        <TextView
                            android:layout_below="@+id/img_s1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000000"
                            android:textSize="6pt"
                            android:id="@+id/t4"
                            android:text="Programming" />

                        <ProgressBar
                            android:id="@+id/pB4"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="5dp"
                            android:progressDrawable="@drawable/custom_proogressbar"
                            android:layout_below="@+id/t4"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_centerHorizontal="true"
                            android:max="12"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </HorizontalScrollView>


        <TextView
            android:id="@+id/textViewHeading"
            android:layout_below="@+id/layout_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:textSize="10pt"
            android:text="Overall Progress"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/card_overall"
            android:layout_below="@+id/textViewHeading"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/circular_progress"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:layout_marginRight="10dp"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:background="@drawable/circular_shape"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="12" />

                <TextView
                    android:id="@+id/textViewOverall"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="88%\nOverall Progress" />

                <TextView
                    android:id="@+id/textViewSubHeading1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/logo1"
                    android:textColor="#000000"
                    android:text="Programming"
                    android:textSize="6pt"/>

                <TextView
                    android:id="@+id/textViewRightSubHeading1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="textEnd"
                    android:layout_alignParentRight="true"
                    android:text="10%"
                    android:textSize="6pt"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/circular_progress"
                    android:id="@+id/logo1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/ic_prog"/>

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/textViewSubHeading1"
                    android:layout_toRightOf="@+id/logo1"
                    android:progressDrawable="@drawable/custom_proogressbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textViewSubHeading2"
                    android:layout_below="@+id/logo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_toRightOf="@+id/logo2"
                    android:textSize="6pt"
                    android:text="Skills" />

                <TextView
                    android:id="@+id/textViewRightSubHeading2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo1"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="textEnd"
                    android:layout_alignParentRight="true"
                    android:text="10%"
                    android:textSize="6pt"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/logo2"
                    android:layout_below="@+id/logo1"
                    android:layout_toRightOf="@+id/circular_progress"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/skill_icon2"/>

                <ProgressBar
                    android:id="@+id/progressBar2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="5dp"
                    android:progressDrawable="@drawable/custom_progressbar2"
                    android:layout_toRightOf="@+id/logo2"
                    android:layout_below="@+id/textViewSubHeading2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textViewSubHeading3"
                    android:layout_below="@+id/logo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/logo3"
                    android:textColor="#000000"
                    android:textSize="6pt"
                    android:text="Career" />

                <TextView
                    android:id="@+id/textViewRightSubHeading3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo2"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="textEnd"
                    android:layout_alignParentRight="true"
                    android:text="10%"
                    android:textSize="6pt"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/logo3"
                    android:layout_below="@+id/logo2"
                    android:layout_toRightOf="@+id/circular_progress"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/career_icon2"/>

                <ProgressBar
                    android:id="@+id/progressBar3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:progressDrawable="@drawable/custom_progressbar3"
                    android:layout_below="@+id/textViewSubHeading3"
                    android:layout_toRightOf="@+id/logo3"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TableRow
            android:id="@+id/hrbottom"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/card_overall"
            android:layout_height="1.5dp"
            android:background="#d3d3d3"></TableRow>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/hrbottom"
            android:orientation="horizontal"
            android:id="@+id/hbelowlayout"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:id="@+id/hbelowcard1"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hbelow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#787878"
                            android:textSize="7pt"
                            android:text="Total Modules" />


                        <TextView
                            android:id="@+id/mod_total"
                            android:layout_below="@+id/hbelow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:textSize="7pt"
                            android:text="96" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/hbelowcard2"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/hbelow2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#787878"
                            android:textSize="7pt"
                            android:text="Modules Completed" />

                        <TextView
                            android:id="@+id/mod_total2"
                            android:layout_below="@+id/hbelow2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:textSize="7pt" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:id="@+id/buttonContinueLearning"
            android:textAllCaps="false"
            android:layout_below="@+id/hbelowlayout"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bg"
            android:layout_height="40dp"
            android:text="Continue Learning"/>


    </RelativeLayout>


</ScrollView>