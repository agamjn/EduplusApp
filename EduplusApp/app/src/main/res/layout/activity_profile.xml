<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Profile">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/view1"
        android:background="@drawable/bg_content1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textStyle="bold"
        android:id="@+id/tvfb"
        android:textSize="26dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageupload"
        android:layout_below="@+id/tvfb"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile">
    </ImageView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageupload"
        android:layout_toRightOf="@+id/imageupload"
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="-55dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="6dp"
        android:src="@drawable/ic_baseline_camera_alt_24"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/imageupload"
        android:hint="Name"
        android:textColorHint="@color/black"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="2"
        android:maxLength="1000"
        android:maxLines="4"
        android:id="@+id/name_feedback"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/name_feedback"
        android:textColorHint="@color/black"
        android:hint="Standard"
        android:drawableStart="@drawable/ic_baseline_class_24"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="2"
        android:maxLength="1000"
        android:maxLines="4"
        android:id="@+id/number_feedback"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/number_feedback"
        android:textColorHint="@color/black"
        android:hint="School Name"
        android:drawableStart="@drawable/ic_baseline_school_24"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="2"
        android:maxLength="1000"
        android:maxLines="4"
        android:id="@+id/feedback_txt"/>
    <Button
        android:id="@+id/send_button"
        android:layout_below="@id/feedback_txt"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home"
        android:text="Update"
        android:layout_marginBottom="25dp"
        android:textColor="#fff"
        android:textStyle="bold"
        />

</RelativeLayout>

</ScrollView>